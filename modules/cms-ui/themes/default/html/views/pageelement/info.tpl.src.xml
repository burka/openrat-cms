<output xmlns="http://www.openrat.de/template" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.openrat.de/template ../../../../../../template-engine/components/template.xsd">
	<table>
		<row class="data">
			<column>
				<text text="name"></text>
			</column>
			<column class="name">
				<text var="name"></text>
			</column>
		</row>
		<row class="data">
			<column>
				<text text="description"></text>
			</column>
			<column>
				<text var="description"></text>
			</column>
		</row>
		<row class="data">
			<column>
				<text text="type"></text>
			</column>
			<column class="filename">
				<image elementtype="var:element_type"></image>
				<text key="tpl:el_{element_type}"></text>
			</column>
		</row>
		<row class="data">
			<column>
				<text key="template"></text>
			</column>
			<column id="var:template_id" name="var:template_name" action="template">
				<image file="icon_template"></image>
				<text var="template_name"></text>
			</column>
		</row>
		<row class="data">
			<column>
				<text key="element"></text>
			</column>
			<column id="var:element_id" name="var:element_name" action="element">
				<image type="var:element_type"></image>
				<text var="element_name"></text>
			</column>
		</row>
		<row class="data">
			<column>
				<text key="format" />
				<text key="element" />
			</column>
			<column>
				<text var="element_format" />
			</column>
		</row>
		<row class="data">
			<column>
				<text key="format" />
			</column>
			<column>
				<text var="format" />
			</column>
		</row>
		<row class="data">
			<column>
				<text text="lastchange"></text>
			</column>
			<column>
				<image icon="el_date"></image>
				<date date="var:lastchange_date"></date>
				<text raw=", "></text>
				<image icon="user"></image>
				<user user="var:lastchange_user"></user>
			</column>
		</row>
	</table>
</output>