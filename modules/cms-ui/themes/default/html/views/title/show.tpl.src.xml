                    </link>
                </part>

                <part class="entry clickable filtered on-action-element">
                    <link type="dialog" title="message:menu_advanced_desc"
                          subaction="advanced">
                        <image method="advanced" align="left"></image>
                        <text key="menu_advanced"></text>
                    </link>
                </part>

                <part class="divide"/>

                <part class="entry clickable filtered on-action-project on-action-template on-action-page on-action-element on-action-image on-action-file on-action-folder on-action-link on-action-language on-action-model on-action-user on-action-group">
