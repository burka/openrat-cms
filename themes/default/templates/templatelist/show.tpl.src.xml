<output xmlns="http://www.openrat.de/template" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.openrat.de/template ../template.xsd">
	<table>
		<row class="headline">
			<column>
				<text key="name"></text>
			</column>
		</row>
		<list list="templates" extract="true">
			<row class="data">
				<column id="var:id" name="var:name" action="template">
					<text var="name"></text>
				</column>
			</row>
		</list>
		
		<row class="data">
			<column colspan="1">
				<link type="view" subaction="add">
					<image icon="add"/>
					<text text="new"/>
				</link>
			</column>
		</row>
	</table>
	<if empty="templates">
		<text text="GLOBAL_NO_TEMPLATES_AVAILABLE_DESC"></text>
	</if>
	<link class="action" action="template" subaction="add">
		<text key="menu_template_add"></text>
	</link>
</output>